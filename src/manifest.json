{
  "manifest_version": 3,
  "name": "NetSuite DevTools",
  "description": "SuiteScript Playground and SuiteQL Query Runner for NetSuite.",
  "author": "Fabian Rodriguez <fabian@unrealbyte.com>",
  "homepage_url": "https://github.com/fabrodz/netsuite-devtools",
  "version": "1.0",
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_icon": "img/icon128.png"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "host_permissions": ["*://*.netsuite.com/*"],
  "web_accessible_resources": [
    {
      "resources": [
        "src/inject/dev-console.js",
        "libs/codemirror/5.65.13/codemirror.min.js",
        "libs/codemirror/5.65.13/javascript.min.js",
        "libs/codemirror/5.65.13/codemirror.min.css",
        "libs/quickEval.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}